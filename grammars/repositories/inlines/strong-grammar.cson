key: 'strong'

patterns: [

  # Matches strong unconstrained phrases
  #
  # Examples
  #
  #   s**trong** phrase
  #
  name: 'markup.bold.strong.unconstrained.asciidoc'
  match: '(?<!\\\\\\\\)(\\[.+?\\])?(\\*\\*).+?(\\*\\*)'
  captures:
    1: name: 'markup.meta.attrlist.asciidoc'
    2: name: 'support.constant.asciidoc'
    3: name: 'support.constant.asciidoc'
,
  # Matches strong constrained phrases
  #
  # Examples
  #
  #   *strong phrase*
  #
  name: 'markup.bold.strong.constrained.asciidoc'
  match: '(?<![\\\\;:\\p{Word}\\*])(\\[.+?\\])?(\\*)(?:\\S|\\S.*?\\S)(\\*)(?!\\p{Word})'
  captures:
    1: name: 'markup.meta.attrlist.asciidoc'
    2: name: 'support.constant.asciidoc'
    3: name: 'support.constant.asciidoc'
]
